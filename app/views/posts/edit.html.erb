<h1 class="text-center">Edit Post</h1>
<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@group, @post] do |f| %>
    <div>
      <%= f.input :content %>
    </div>
    <%= f.submit "Save", class: "btn btn-default" %>
    <%= link_to("Back", groups_path(@group), class: "btn btn-default") %>
  <% end %>
 </div>
